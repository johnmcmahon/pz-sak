@Library('pipelib@master') _

node {
// ('sl61')
  def nodejs = tool 'NodeJS_6'

  stage('Setup') {
    git([
      url: "https://github.com/venicegeo/pz-sak",
      branch: "master"
    ])
  }

  stage('Karma Tests') {
    npmSetup()
    withEnv(["PATH+=${nodejs}/bin"]) {
      sh './ci/karma.sh'
    }
  }

  stage('Archive') {
    sh './ci/archive.sh'
    mavenPush()
  }

  stage('Initial Scans') {
    dependencyCheck()

    // We shouldn't need to run sonar again because the lcov.info file was
    // already generated with karma tests and the sonar-project.properties file exists
    // sh './ci/sonar.sh'
  }

  stage ('CI Deploy') {
    cfPush()
    zap()
    cfBgDeploy()
  }

  stage ('Integration Testing') {
    postman()
  }

  stage('Reset') {
    git([
      url: "https://github.com/venicegeo/pz-sak",
      branch: "master"
    ])
  }

  stage('Staging Deploy') {
    cfPush {
      cfTarget = 'stage'
    }
    cfBgDeploy {
      cfTarget = 'stage'
    }
  }

  stage('Final Scans') {
    fortify()
  }

  stage ('Cleanup') {
    deleteDir()
  }
}
